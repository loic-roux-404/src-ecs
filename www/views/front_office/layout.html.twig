{%- set currentRoute = app.request.attributes.get('_route') -%}
{%- set currentRouteParams = app.request.attributes.get('_route_params') -%}
{%- set currentPath = path(currentRoute, currentRouteParams ) -%}

<!DOCTYPE html>
<html lang="FR">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta content="width=device-width, initial-scale=1" name="viewport">
  <title>{% block title %}{% endblock %}</title>

  {% block links %}
    {{ encore_entry_link_tags('app', null, 'front_office') }}
  {% endblock %}

  <link rel="shortcut icon" href="{{ asset('static/favico.png') }}" type="image/x-icon">

  <style>
    {% block stylesheets %}{% endblock %}
  </style>
</head>
<body>

{% block body %}
  {% include '@fo/partials/header.html.twig' %}

  {% include '@fo/components/flash-messages.html.twig' %}

  <main>
    {% block main %}{% endblock %}
  </main>

  {% include '@fo/partials/footer.html.twig' %}

{% endblock %}

{% block scripts %}
  {{ encore_entry_script_tags('app', null, 'front_office') }}
{% endblock %}

