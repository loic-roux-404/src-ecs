{% if pag.currentPage > 1 %}
    <div class="paginator">
        {% if (pag.currentPage * pag.maxPerPage) < pag.nbResults %}
            <a href="{{ path(route, { page: pag.currentPage + 1 }) }}" class="btn pop page-next next">{{
                'Next'|trans|raw }}</a>
        {% endif %}
        <div class="page btn pop current">{{ pag.currentPage }} </div>
        <a href="{{ path(route, { page: pag.currentPage - 1 }) }}" class="btn pop page-previous previous">{{
            'Previous'|trans|raw }}</a>
    </div>
{% elseif pag.nbResults > firstPageResults|default(4) %}
    <div class="paginator">
        <a href="{{ path(route, { page: pag.currentPage + 1 }) }}" class="btn pop">{{ 'KnowMore'|trans|raw }}</a>
    </div>
{% endif %}