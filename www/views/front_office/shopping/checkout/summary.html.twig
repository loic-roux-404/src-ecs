{% extends '@fo/shopping/checkout/steps-layout.html.twig'%}
{% block title %}Récapitulatif{% endblock %}

{% block breadcrumb %}
<div class="breadcrumbs">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb justify-content-center">
                <li class="breadcrumb-item">Identification</li>
                <li class="breadcrumb-item">Adresse</li>
                <li class="breadcrumb-item">Livraison</li>
                <li class="breadcrumb-item active" aria-current="page">Récapitulatif</li>
                <li class="breadcrumb-item">Paiement</li>
            </ol>
        </nav>
    </div>
</div>
{% endblock breadcrumb %}

{% block main %}
<hr class="sep-header">
<h1 class="pop-sBold panier_title">Récapitulatif</h1>
<section class="fullCenter mon_panier">
    <div class="panier_space panier">
    <table class="pop">
        <thead>
        <th>Produit</th>
        <th>Quantité</th>
        <th class="total_pc">Total</th>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td class="table_img">
                    <a href="/product/{{ product.product.slug }}">
                        <img src="{{ vich_uploader_asset(product.product, 'imageFile') }}" alt="{{ product.product.name }}">
                        <h2>{{ product.product.name }}</h2>
                    </a>
                </td>
                <td>
                    {{ product.quantity }}
                </td>
                <td class="total_pc">
                    <p data-target-id="{{ product.product.id }}">{{ product.thisPrice }} €</p>
                </td>
            </tr>
        {% endfor %}
        <tr class="total_mob">
            <td><p>Total</p></td>
            <td colspan="3"><p class="price">{{ totalPrice }} €</p></td>
        </tr>
        </tbody>
    </table>

    <div class="recapPanier">
        <h3 class="pop">Récapitulatif</h3>
        <div class="sousTot centerBetween">
            <p class="pop">Sous-total</p>
            <p class="serge price">{{ totalPrice }} €</p>
        </div>
{#        <div class="sousTot centerBetween">
            <p class="pop">Dont TVA</p>
            <p class="serge price"> {{ vatPrice }} €</p>
        </div>#}
        <hr>
        <div class="total centerBetween">
            <p class="serge-bold"><strong>Total</strong></p>
            <p class="serge-bold price"><strong>{{ totalPrice }} €</strong></p>
        </div>
        <div class="center continue pop">
            <a href="{{ path('checkoutPayment') }}" class="btn btn-primary">{{ 'Payer'|trans|raw }}</a>
        </div>
    </div>
</div>
</section>

{% endblock %}
