                <p class="title pop">{{ product.tags[loop.index-1]|default('') }}</p>
                <div class="hide">
                    <p class="title-hide pop-bold">{{ product.tags[loop.index-1]|default('') }}</p>
                    <p class="pop">{{ feature }}</p>
