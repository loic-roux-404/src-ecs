<div class="pop-up-connection pop">
    <h2 class="pop-sBold">Se connecter</h2>
    <form class="form" action="{{ path('login') }}" novalidate="" autocomplete="off" method="POST">
        <input type="email" class="{% if error %}is-invalid{% endif %}" name="login_form[_username]" placeholder="Email" required />
        <input type="password" class="{% if error %}is-invalid{% endif %}" name="login_form[_password]" placeholder="Mot de passe" required/>
        <input type="hidden" name="login_form[_target_path]" value="{{ targetPath }}"/>
        {{ form_widget(form._token) }}
        <div class="links text-center center">
            <a href="{{ path('registration') }}">S'inscrire</a>
            <a>|</a>
            <a href="{{ path('passwordReminder') }}">Mot de passer perdu</a>
        </div>
        {% if error %}
            <div class="form-group">
                <div class="alert alert-danger text-center" role="alert">
                    Mot de passe ou email invalide
                </div>
            </div>
        {% endif %}
        <button class="pop buttonLogin" type="submit">Se connecter</button>
    </form>
</div>